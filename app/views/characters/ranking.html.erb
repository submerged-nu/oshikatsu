<div class="d-flex align-items-center justify-content-between">
  <h1>キャラクターランキング</h1>
</div><br>
<% if @ranking.present? %>
  <div class="row">
    <% @ranking.each_with_index do |character, index| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-4">
        <div class="ranking-position">
          <%= "#{index + 1}位" %>
        </div>
        <%= link_to posts_path(q: { name_cont: character.name }), class: "text-decoration-none" do %>
          <div class="ranking-post">
            <%= image_tag(@most_liked_images[character.id], alt: character.name, class: 'post-img', style: 'border-radius: 10%;') %>
            <h2 class="post-name"><%= character.name.truncate(11) %></h2>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <p>ランキングが作成されませんでした</p>
<% end %>