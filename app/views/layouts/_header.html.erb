<div class='header d-flex justify-content-between align-items-center flex-wrap'>
  <div class='border-short'></div>
  <div class='logo'>
    <%= image_tag 'oshikatsu-logo.webp', style: 'border-radius: 50%; width: 50px; height: 50px;' %>
  </div>
  <h2 class='oshikatsu'>オシカツ！</h2>
  <div class='d-flex align-items-center header-right'>
    <div class='new-post me-3'>
      <%= link_to '投稿する', new_post_path, data: { turbolinks: false } %>
    </div>
    <% if @current_user.image.url %>
      <%= link_to user_path(@current_user.id), style: 'display: inline-block; width: 50px; height: 50px; border-radius: 50%; margin: 10px 0;' do %>
        <%= image_tag @current_user.image.url, style: 'width: 100%; height: 100%; border-radius: 50%;' %>
      <% end %>
    <% else %>
      <%= %>
    <% end %>
  </div>
</div>