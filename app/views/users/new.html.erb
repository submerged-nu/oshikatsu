<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>
<div class="form-container">
  <h1 class='form-title'>ユーザー新規登録</h1>
  <%= form_with model: @user, class: 'my-4' do |f| %>
  <div class="form-group">
    <%= f.label :メールアドレス, class: 'form-label' %>
    <%= f.text_field :email, placeholder: 'oshikatsu@example.com', class: 'form-control mx-auto', style: 'width: 80%;' %>
  </div>
  
  <div class="form-group">
    <%= f.label :パスワード, class: 'form-label' %>
    <%= f.password_field :password, placeholder: '半角英数8文字以上', class: 'form-control mx-auto', style: 'width: 80%;' %>
  </div>

  <div class="form-group">
    <%= f.label :パスワード確認, class: 'form-label' %>
    <%= f.password_field :password, placeholder: 'パスワード確認', class: 'form-control mx-auto', style: 'width: 80%;' %>
  </div>
  <%= f.submit '登録する', class: 'search-button btn-primary' %>
  <% end %>
</div>
