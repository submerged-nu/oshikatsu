<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <div class='flash-message'><%= message %></div>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="top-margin-short-form-container">
  <h1 class='form-title'>ユーザー編集</h1>
  <%= form_with model: @user, class: 'my-4' do |f| %>
    <div class="form-group"> 
      <div id='image-cropper'></div>
      <%= f.label :image, 'アイコン', class: 'form-label' %>
      <%= f.file_field :image, placeholder: 'oshikatsu@example.com', class: 'form-control mx-auto', style: 'width: 80%;' %>
    </div>

    <div class="form-group">
      <%= f.label :name, 'ユーザー名', class: 'form-label' %>
      <%= f.text_field :name, placeholder: '15文字以内', class: 'form-control mx-auto', style: 'width: 80%;' %>
    </div>

    <%= f.submit '変更する', class: 'submit-button btn-primary' %>
  <% end %>
</div>
