<div class="d-flex align-items-center justify-content-start" style="margin-top: -10px;">
  <% if @user.image.url %>
    <div style="margin-right: 30px;">
      <%= image_tag @user.image.url, size: '100x100', style: 'border-radius: 50%;' %>
    </div>
  <% end %>
  <div style="flex-grow: 1; min-width: 0;">
    <p style="margin: 0; font-size: 20px;"><%= @user.name %>さんの推し一覧</p>
  </div>
  <% if current_user == @user %>
    <div style="margin-left: auto; margin-right: 60px;">
      <%= link_to 'ユーザー編集', edit_user_path(@user) %>
    </div>
  <% end %>
</div><br>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-2">
      <div class="post border">
        <%= link_to post_path(post.id), data: { turbo_stream: true }, class: "text-decoration-none" do %>
          <%= image_tag(post.image.url, alt: post.name, width: "100%", style: 'border-radius: 10%;') %>
          <h2><%= post.name %></h2>
          <p><%= post.body %></p>
          <%= render partial: "posts/like", locals: { post: post } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

