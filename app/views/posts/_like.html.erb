<%= turbo_frame_tag dom_id(post, :likes) do %>
  <% if current_user.likes.exists?(post: post) %>
    <%= link_to 'いいねを取り消す', like_path(post), method: :post, data: { turbo_method: :post } %>
  <% else %>
    <%= link_to 'いいね', likes_path(post_id: post.id), turbo_method: :post %>
  <% end %>
<% end %>