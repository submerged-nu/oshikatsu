<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>
<%= turbo_frame_tag dom_id(post, :likes) do %>
  <% if current_user&.likes&.exists?(post: post) %>
    <%= link_to 'いいねを取り消す', like_path(post), data: { "turbo_method": :delete } %>
  <% elsif current_user %>
    <%= link_to 'いいね', likes_path(post_id: post.id), data: { "turbo_method": :post } %>
  <% else %>
    <%= link_to 'ログアウト中', new_session_path %>
  <% end %>
<% end %>
