<div id='like-<%= post.id %>'>
  <% if @liked_post_ids.include?(post.id) %>
    <%= link_to like_path(post), data: {turbo_method: :delete}, class: 'text-decoration-none' do %>
      <i class="fa-solid fa-heart heart-icon fa-lg"></i>
    <% end %>
  <% else %>
    <%= link_to likes_path(post_id: post.id), data: {turbo_method: :post}, class: 'text-decoration-none' do %>
      <i class="fa-regular fa-heart heart-icon fa-lg"></i>
    <% end %>
  <% end %>
</div>
